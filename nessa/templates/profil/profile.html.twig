{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <style>
        .background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('{{ asset('images/inscription.png') }}');
            background-size: cover;
            background-position: center;
            filter: blur(5px);
            z-index: -1;
        }

        .form-container {
            font-family: 'Montserrat', sans-serif;
            max-width: 900px;
            margin: -225px auto;
            padding: 30px;
            border-radius: 8px;
            background-color: white;
            position: sticky;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .form-title {
            font-family: 'Montserrat', sans-serif;
            text-align: center;
            font-size: 2rem;
            margin-bottom: 30px;
        }

        .form-row {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .form-group {
            flex: 1 1 45%;
            margin-bottom: 20px;
        }

        .form-group label {
            font-family: 'Montserrat', sans-serif;
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .form-group p {
            margin: 0;
            padding: 10px;
            background-color: #f5f5f5;
            border-radius: 4px;
        }

        .logout {
            text-align: center;
            margin-top: 30px;
        }

        .logout a {
            font-family: 'Montserrat', sans-serif;
            display: inline-block;
            padding: 12px 25px;
            background-color: #c0392b;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            font-size: 1rem;
        }

        .logout a:hover {
            background-color: #e74c3c;
        }




        .change-password-btn {
            font-family: 'Montserrat', sans-serif;
            display: inline-block;
            margin-top: 10px;
            padding: 8px 16px;
            background-color: #2980b9;
            color: white;
            border-radius: 5px;
            cursor: pointer;
        }

        .change-password-btn:hover {
            background-color: #3498db;
        }
        .modal {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 20px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            z-index: 1000;
        }

        .modal button {
            margin-top: 10px;
        }

        .error-message {
            color: red;
            font-size: 0.9rem;
            margin-top: 5px;
        }

        /* Le style de la bannière */
        .header-banner {
            font-family: 'Montserrat', sans-serif;
            //background-color: #2d3e50;
            text-align: center;
            padding: 20px 20px 0px 20px;
            color: white;
            position: relative;
            z-index: 1;
        }

        .header-banner h2 {
            font-family: 'Montserrat', sans-serif;
            font-size: 3rem;
            margin: 0;
        }

        .header-invisible{
            opacity: 0;
            padding: 115px 20px 30px 20px;
            z-index: -1;
        }
    </style>

    <div class="background"></div>
    <div class="header-invisible"></div>

    <div class="form-container">
        <h2 class="form-title">Mon Profil</h2>
        <div class="form-row">
            <div class="form-group">
                <label>Nom</label>
                <p>{{ user.nom }}</p>
            </div>
            <div class="form-group">
                <label>Prénom</label>
                <p>{{ user.prenom }}</p>
            </div>
            <div class="form-group">
                <label>Email</label>
                <p>{{ user.email }}</p>
            </div>
            <div class="form-group">
                <label>Téléphone</label>
                <p>{{ user.telephone }}</p>
            </div>
            <div class="form-group">
                <label>Mot de passe</label>
                <p>********</p>
                <span class="change-password-btn" onclick="openPasswordModal()">Modifier</span>
            </div>
            <div class="form-group">
                <label>Pseudo</label>
                <p>{{ user.pseudo }}</p>
            </div>
            <div class="form-group">
                <label>Université</label>
                <p>{{ user.universite }}</p>
            </div>
            <div class="form-group">
                <label>Formation</label>
                <p>{{ user.formation }}</p>
            </div>
            <div class="form-group">
                <label>Niveau</label>
                <p>{{ user.niveau }}</p>
            </div>
        </div>

        <div id="password-modal-root"></div>

        <div class="logout">
            <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </div>
    </div>

{% endblock %}
