{% extends 'base.html.twig' %}

{% block title %}Matières du niveau {{ niveau.nom }}{% endblock %}

{% block body %}
    <style>
        body, html {
            overflow-y: hidden;
            width: 100%; /* Assure que la largeur de la page ne dépasse pas 100% de l'écran */
        }

        .consultation-page {
            background-color: #ffffff;
            min-height: 100vh;
        }

        .container {
            position: relative;
        }

        .header {
            display: flex;
            align-items: center;
            justify-content: center; /* Centre horizontalement le titre */
            margin-bottom: 150px;
        }

        .return-button {
            font-family: 'Montserrat', sans-serif;
            color: white;
            font-size: 1.5rem;
            text-decoration: none;
            padding: 10px 20px;
            background: linear-gradient(180deg, rgba(20, 51, 88, 1), rgba(23, 74, 139, 1));
            border-radius: 5px;
            position: absolute; /* Positionne le bouton à gauche */
            left: 40px;
            transition: transform 0.3s;
        }

        .return-button:hover {
            transform: translateY(-5px);
        }

        .page-title {
            font-family: 'Montserrat', sans-serif;
            font-size: 3rem;
            color: #143358;
            margin: 0;
            text-align: center;
        }

        .matieres-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
            padding: 0 40px;
            margin-top: 40px;
            max-width: 100%; /* Assure que le conteneur ne dépasse pas la largeur de l'écran */
        }

        .matiere-card {
            font-family: 'Montserrat', sans-serif;
            text-decoration: none;
            color: inherit;
        }

        .card-content {
            background: linear-gradient(180deg, rgba(20, 51, 88, 1), rgba(23, 74, 139, 1));
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
        }

        .card-content:hover {
            transform: translateY(-10px);
        }

        .matiere-title {
            font-family: 'Montserrat', sans-serif;
            font-size: 2rem;
            color: white;
        }
    </style>
    <div class="consultation-page">
        <div class="container">
            <div class="header">
                <a href="{{ path('app_consult_niveau', { 'id': niveau.formation.id }) }}" class="return-button">←</a>
                <h1 class="page-title">VEUILLEZ SÉLECTIONNER UNE MATIÈRE</h1>
            </div>
            <div class="matieres-grid">
                {% for matiere in matieres %}
                    <a href="{{ path('app_consult_matiere_types', { 'id': matiere.id }) }}" class="matiere-card">
                        <div class="card-content">
                            <h2 class="matiere-title">{{ matiere.nom }}</h2>
                        </div>
                    </a>
                {% else %}
                    <p>Aucune matière n'est disponible pour ce niveau</p>
                {% endfor %}
            </div>
        </div>
    </div>


{% endblock %}
