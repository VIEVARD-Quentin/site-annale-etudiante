{% extends 'base.html.twig' %}

{% block title %}Annales{% endblock %}

{% block body %}
    <style>
        body, html {
            overflow-y: hidden;
            width: 100%; /* Assure que la largeur de la page ne dépasse pas 100% de l'écran */
            background-image: url('{{ asset(formation.nom == 'IAE' ? 'images/iae.png' : 'images/droit.png') }}') !important;
            background-size: cover !important;
            background-position: center !important;
            background-repeat: no-repeat !important;
        }

        .consultation-page {
            position: relative;
            z-index: 1;
            min-height: 100vh;
            padding-top: 50px;
        }

        .container {
            position: relative;
        }

        .header {
            display: flex; /* Utilisation de Flexbox pour aligner le bouton et le titre horizontalement */
            align-items: center; /* Aligne verticalement le bouton et le titre */
            margin-bottom: 150px;
            padding-left: 40px; /* Espace à gauche pour éviter la superposition avec le bord */
        }

        .return-button {
            font-family: 'Montserrat', sans-serif;
            color: #143358FF;
            font-weight: bold;
            font-size: 1.5rem;
            text-decoration: none;
            padding: 10px 20px;
            background-color:white;
            border-radius: 5px;
            transition: transform 0.3s;
            margin-right: 20px; /* Crée un espace entre le bouton et le titre */
        }

        .return-button:hover {
            transform: translateY(-5px);
        }

        .page-title {
            font-family: 'Montserrat', sans-serif;
            font-size: 3.5rem; /* Taille du titre */
            color: white;
            margin: 0; /* Supprime toute marge */
            text-align: left; /* Aligne le titre à gauche */
        }

        .page-title span {
            display: block; /* Force le passage à la ligne */
            font-size: 3rem; /* Taille du deuxième ligne du titre */
        }

        .annales-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            padding: 0 40px;
            margin-top: 40px;
            max-width: 100%; /* Assure que le conteneur ne dépasse pas la largeur de l'écran */
        }

        .annale-card {
            text-decoration: none;
            color: inherit;
        }

        .card-content {
            font-family: 'Montserrat', sans-serif;
            background: linear-gradient(180deg, rgba(20, 51, 88, 1), rgba(23, 74, 139, 1));
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
        }

        .card-content:hover {
            transform: translateY(-10px);
        }

        .annale-title {
            font-size: 2rem;
            color: white;
        }
    </style>

    <div class="consultation-page">
        <div class="container">
            <div class="header">
                <!-- Le bouton est à gauche -->
                <a href="{{ path('app_consult_matiere_types', { 'id': matiere.id }) }}" class="return-button">←</a>
                <!-- Le titre est juste à droite du bouton -->
                <h1 class="page-title">
                    {{ formation.nom|upper }} - <span>{{ niveau.nom|upper }}</span>
                </h1>
            </div>

            <div class="annales-grid">
                {% for annale in annales %}
                    <a href="{{ path('app_consult_annale', {'id': annale.id}) }}" class="annale-card">
                        <div class="card-content">
                            <h2 class="annale-title">{{ annale.nom }}</h2>
                        </div>
                    </a>
                {% else %}
                    <p>Aucune annale disponible.</p>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
