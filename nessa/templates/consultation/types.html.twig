{% extends 'base.html.twig' %}

{% block title %}Types de {{ matiere.nom }}{% endblock %}

{% block body %}
    <style>
        body, html {
            overflow-y: hidden;
            width: 100%;
        }

        .consultation-page {
            background-color: #ffffff;
            min-height: 100vh;
        }

        .container {
            position: relative;
        }

        .header {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 150px;
        }

        .return-button {
            font-family: 'Montserrat', sans-serif;
            color: white;
            font-size: 1.5rem;
            text-decoration: none;
            padding: 10px 20px;
            background: linear-gradient(180deg, rgba(20, 51, 88, 1), rgba(23, 74, 139, 1));
            border-radius: 5px;
            position: absolute;
            left: 40px;
            transition: transform 0.3s;
        }

        .return-button:hover {
            transform: translateY(-5px);
        }

        .page-title {
            font-family: 'Montserrat', sans-serif;
            font-size: 3rem;
            color: #143358;
            margin: 0;
            text-align: center;
        }

        .types-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            padding: 0 40px;
            margin-top: 40px;
        }

        .type-card {
            font-family: 'Montserrat', sans-serif;
            text-decoration: none;
            color: inherit;
        }

        .card-content {
            background: linear-gradient(180deg, rgba(20, 51, 88, 1), rgba(23, 74, 139, 1));
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
        }

        .card-content:hover {
            transform: translateY(-10px);
        }

        .type-title {
            font-family: 'Montserrat', sans-serif;
            font-size: 2rem;
            color: white;
        }
    </style>

    <div class="consultation-page">
        <div class="container">
            <div class="header">
                <a href="{{ path('app_consult_matiere', { 'id': matiere.niveau.id }) }}" class="return-button">←</a>
                <h1 class="page-title">VEUILLEZ SÉLECTIONNER UN TYPE DE RÉVISION</h1>
            </div>
            <div class="types-grid">
                {% for type in types %}
                    <a href="{{ path('app_consult_type_annales', { 'id': type.id }) }}" class="type-card">
                        <div class="card-content">
                            <h2 class="type-title">{{ type.nom }}</h2>
                        </div>
                    </a>
                {% else %}
                    <p>Aucun type disponible pour cette matière.</p>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
